<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/answer_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_for_result"
        android:inputType="numberDecimal"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/user_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:paddingLeft="@dimen/st_padding"
        android:paddingStart="@dimen/st_padding"
        android:paddingBottom="@dimen/st_padding"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/right_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:paddingLeft="@dimen/st_padding"
        android:paddingStart="@dimen/st_padding"
        android:paddingBottom="@dimen/st_padding"
        android:visibility="gone"/>
</LinearLayout>