<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/result_answer_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_for_result"
        android:inputType="numberDecimal"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/user_result_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:paddingLeft="@dimen/st_padding"
        android:paddingStart="@dimen/st_padding"
        android:paddingBottom="@dimen/st_padding"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="112"/>

    <TextView
        android:id="@+id/right_result_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:paddingLeft="@dimen/st_padding"
        android:paddingStart="@dimen/st_padding"
        android:paddingBottom="@dimen/st_padding"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="112"/>

    <EditText
        android:id="@+id/reminder_answer_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_for_reminder"
        android:inputType="numberDecimal"
        android:textSize="24sp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/user_reminder_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:paddingLeft="@dimen/st_padding"
        android:paddingStart="@dimen/st_padding"
        android:paddingBottom="@dimen/st_padding"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="12"/>

    <TextView
        android:id="@+id/right_reminder_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:paddingLeft="@dimen/st_padding"
        android:paddingStart="@dimen/st_padding"
        android:paddingBottom="@dimen/st_padding"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="12"/>
</LinearLayout>