<?xml version="1.0" encoding="utf-8" ?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/NxM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/n_x_m"
        android:onClick="launchTrain"/>

    <Button
        android:id="@+id/NNxM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nn_x_m"
        android:onClick="launchTrain"/>

    <Button
        android:id="@+id/NNxMM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nn_x_mm"
        android:onClick="launchTrain"/>

    <Button
        android:id="@+id/NNNxM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nnn_x_m"
        android:onClick="launchTrain"/>

    <Button
        android:id="@+id/NNNxMM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nnn_x_mm"
        android:onClick="launchTrain"/>

    <Button
        android:id="@+id/NNNxMMM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nnn_x_mmm"
        android:onClick="launchTrain"/>

    <Button
        android:id="@+id/n_plus_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/n_plus_m"
        android:onClick="launchTrain"/>

    <Button
        android:id="@+id/nn_plus_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nn_plus_m"
        android:onClick="launchTrain"/>

    <Button
        android:id="@+id/nn_plus_mm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nn_plus_mm"
        android:onClick="launchTrain"/>

    <Button
        android:id="@+id/nnn_plus_mm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nnn_plus_mm"
        android:onClick="launchTrain"/>

    <Button
        android:id="@+id/nnn_plus_mmm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nnn_plus_mmm"
        android:onClick="launchTrain"/>

</LinearLayout>