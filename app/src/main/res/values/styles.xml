<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <!-- Custom Preference Theme inherits from the v14 support library Material Theme -->
    <style name="AppPreferenceTheme" parent="@style/Theme.AppCompat">
        <!-- Theme for the Preferences -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#FFFFFFFF</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:color">#FFFFFFFF</item>
    </style>

    <!-- there is v17 variant -->
    <style name="KindOfTrainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_for_centralized_button</item>
        <item name="android:layout_marginRight">@dimen/margin_for_centralized_button</item>
        <item name="android:layout_marginBottom">@dimen/margin_between_button</item>
        <item name="android:padding">@dimen/padding_around_button</item>
    </style>

    <!-- there is v17 variant -->
    <style name="LaunchAndSettingsButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_for_centralized_button</item>
        <item name="android:layout_marginRight">@dimen/margin_for_centralized_button</item>
        <item name="android:layout_marginBottom">@dimen/margin_between_button</item>
        <item name="android:padding">@dimen/padding_around_button</item>
    </style>

</resources>